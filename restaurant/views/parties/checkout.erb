<h1> Checkout for Table Number <%= @party.table_number %></h1>

<form action="/parties/<%= @party.id %>/checkout" method="POST">
  Table Number: <input type="number" name="party[table_number]" value="<%= @party.table_number %>"><br>
  Guests: <input type="number" name="party[guests]" value="<%= @party.guests %>"><br>
  Paid: <select name="party[paid]">
      <option value="true">True</option>
  		<option value="false">False </option>
  </select><br>

  <input type="hidden" name="_method" value="PATCH"><br>
  <input type="submit">
</form>

<form action="/parties/<%= @party.id %>/checkout" method='POST'>
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value='Delete Table'>
</form>
